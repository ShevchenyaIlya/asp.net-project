@model IEnumerable<asp.net_project.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Success)
{
    @Html.Partial("_SuccessPartial");
}

<a href="~/Categories/Create" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Create New</a>
<div style="background-color:white; height: 10px"></div>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDelete)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDelete)
            </td>
            <td>
                <a href="~/Categories/Edit/@item.CategoryId" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Edit</a>
                <a href="~/Categories/Details/@item.CategoryId" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Details</a>
                <a href="~/Categories/Delete/@item.CategoryId" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Delete</a>
            </td>
        </tr>
    }

</table>

<div style="background-color:white; height: 30px"></div>
