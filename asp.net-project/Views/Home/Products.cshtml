@model IEnumerable<asp.net_project.Models.Product>
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<span>
    <h2>Products</h2>
    <a href="~/Home/FindProduct" class="btn btn-outline-secondary" role="button" aria-pressed="true" style="text-align:center">Find product</a>
</span>
    <hr />
    <div class="card-columns">
        @foreach (var product in Model)
        {
            <div class="card">
                <div class="card-img" style="background-image: url('../../Images/@product.ImageUrl');">
                </div>
                <div class="card-body">
                    <h5 class="card-title">@product.ProductName</h5>
                    <h6 class="card-text">@product.Description</h6>
                </div>
                <div class="card-footer">
                    <small class="text-muted">
                        <a href="~/Products/Details/@product.ProductId" class="btn btn-secondary" role="button" aria-pressed="true">More Info</a>
                    </small>
                </div>
            </div>
        }
    </div>

