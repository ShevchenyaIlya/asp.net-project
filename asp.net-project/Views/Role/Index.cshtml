@model IEnumerable<asp.net_project.Models.RoleViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<a href="~/Role/Create" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Create New</a>
<div style="background-color:white; height: 10px"></div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a href="~/Role/Edit/@item.Id" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Edit</a>
                <a href="~/Role/Details/@item.Id" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Details</a>
                <a href="~/Role/Delete/@item.Id" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Delete</a>
            </td>
        </tr>
    }

</table>

<div style="background-color:white; height: 30px"></div>
